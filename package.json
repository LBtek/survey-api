{
  "name": "clean-node-api",
  "version": "3.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start": "npm run build && node dist/main/server.js",
    "dev": "npm run build && node --watch dist/main/server.js & tsc --watch -p tsconfig-build.json",
    "up": "npm run build && docker-compose up --build --abort-on-container-exit",
    "down": "docker-compose down",
    "v:down": "docker-compose down --volumes",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js --exitcrash",
    "lint:fix": "eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Luan Rafael",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.5.0",
    "@types/swagger-ui-express": "^4.1.4",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.47.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.0",
    "mockdate": "^3.0.5",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.0",
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongodb": "^5.7.0",
    "openapi3-ts": "^4.1.2",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
